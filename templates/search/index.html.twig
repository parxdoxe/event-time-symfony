{% extends 'base.html.twig' %}


{% block body %}
    {% if app.request.method == 'POST' %}
    <div>
        {% if events | length == 0 %}
            <h4>Aucun résulat pour votre recherche.</h4>
           {% else %}
               <h3 class="mt-3">Vos résulats de recherche :</h3>
               {% for event in events %}
                   <div class="flex items-center mt-3 p-3 bg-light border rounded">
                       
                     <img class="w-[150px] mr-5" src={{ asset('uploads/img/' ~ event.image) }} alt="">
                     <h3 class="text-dark font-bold"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ event.name }}</h6>
                
                       
                   </div>
              {% endfor %}
          {% endif %}
     </div>
{% endif %}
{% endblock %}
